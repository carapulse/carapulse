{
  "tool": "grafana",
  "actions": {
    "annotate": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "dashboard_get": {
      "type": "object",
      "required": ["uid"],
      "properties": {
        "uid": { "type": "string" }
      }
    },
    "dashboard_upsert": {
      "type": "object",
      "properties": {
        "dashboard": { "type": "object" },
        "folderId": { "type": "integer" },
        "overwrite": { "type": "boolean" }
      }
    },
    "dashboard_list": {
      "type": "object",
      "properties": {
        "query": { "type": "string" },
        "folder_ids": { "type": "array", "items": { "type": "integer" } }
      }
    },
    "dashboard_delete": {
      "type": "object",
      "required": ["uid"],
      "properties": {
        "uid": { "type": "string" }
      }
    }
  }
}
