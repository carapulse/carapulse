{
  "tool": "prometheus",
  "actions": {
    "query": {
      "type": "object",
      "required": ["query"],
      "properties": {
        "query": { "type": "string" }
      }
    },
    "query_range": {
      "type": "object",
      "required": ["query", "start", "end", "step"],
      "properties": {
        "query": { "type": "string" },
        "start": { "type": "string" },
        "end": { "type": "string" },
        "step": { "type": "string" }
      }
    },
    "rules": {
      "type": "object",
      "properties": {}
    },
    "query_exemplars": {
      "type": "object",
      "required": ["query", "start", "end"],
      "properties": {
        "query": { "type": "string" },
        "start": { "type": "string" },
        "end": { "type": "string" }
      }
    }
  }
}
